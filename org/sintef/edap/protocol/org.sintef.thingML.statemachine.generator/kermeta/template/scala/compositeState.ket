<%@ket
package="thingML"
require="../../stringHelper.kmt ./GUI.kmt ../../helper.kmt"
using=""
isAspectClass="false"
class="CompositeGenerator"
ismethod="false"operation="generate"
parameters="state:edap::CompositeState"
%>
<%var helper : StringHelper init StringHelper.new
var guiGenerator : GUIGenerator init GUIGenerator.new%>

case class <%=helper.firstToUpper(state.name)%>(master : Orchestrator, parent : CompositeState, keepHistory : Boolean<%if state.isKindOf(edap::StateMachine) then%>, withGUI : Boolean<%end%>) extends CompositeState(master, parent, keepHistory) {

  //create sub-states
<%state.substate.each{s | %>
  <%if s.isInstanceOf(edap::CompositeState) then%>
  val <%=s.name%>_state = <%=helper.firstToUpper(s.name)%>(master, this, false)
  <%else%>
  val <%=s.name%>_state = <%=helper.firstToUpper(s.name)%>(master, this)
  <%end%>
<%}%>
  override val substates = List(<%=helper.statesToList(state)%>)
  override val initial = <%=state.initial.name%>_state
  
  //create transitions among sub-states
<%state.substate.each{ s | %>
	<%s.outgoing.each{ t | %>
  val <%=t.source.name%>_<%=t.name%>_<%=t.target.name%>_transition = <%=helper.firstToUpper(t.source.name)%>_<%=helper.firstToUpper(t.name)%>_<%=helper.firstToUpper(t.target.name)%>(<%=t.source.name%>_state, <%=t.target.name%>_state, master, List(<%=helper.eventsToList(t)%>))
	<%}%>
<%}%>  
  override val outGoingTransitions = List(<%=helper.transitionsToList(state)%>)    
  

  override def onEntry() = {
  <%if state.entry != void then%>
    <%=state.entry.print%>
  <%end%>
  }
  
  override def onExit() = {
  <%if state.exit != void then%>
    <%=state.exit.print%>
  <%end%>
  }
  
<%if state.isKindOf(edap::StateMachine) then%>
  override def startState() = {
    super.startState
    if (withGUI)
      <%=state.container.asType(edap::SoftwareComponent).name%>GUI.init
  }
  
  <%_res.append(guiGenerator.generate(state.container.asType(edap::SoftwareComponent)))%>
<%end%>
}