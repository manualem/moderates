<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >


<LinearLayout android:id="@+id/LinearLayout03" android:layout_height="wrap_content" android:layout_width="fill_parent">
<ImageView android:id="@+id/ImageView01" android:layout_height="wrap_content" android:src="@drawable/moderates_blue" android:layout_width="fill_parent" style=" " android:background="#FFA0A0A0"></ImageView>
</LinearLayout>

<LinearLayout android:id="@+id/LinearLayout01" android:layout_height="wrap_content" android:layout_width="fill_parent" android:orientation="horizontal" android:background="#FFA0A0A0">


<LinearLayout android:id="@+id/LinearLayout04" android:layout_height="wrap_content" android:orientation="vertical" android:layout_width="wrap_content" android:layout_weight="1">
<Button android:layout_height="wrap_content" android:layout_weight="1" android:text="Start Service" android:id="@+controller_id/ButtonStart" android:layout_width="fill_parent"></Button>
<Button android:layout_height="wrap_content" android:layout_weight="1" android:text="Stop Service" android:id="@+controller_id/ButtonStop" android:layout_width="fill_parent"></Button>
</LinearLayout>
<LinearLayout android:id="@+id/LinearLayout05" android:layout_height="wrap_content" android:orientation="vertical" android:layout_weight="1" android:layout_width="wrap_content">
<Button android:layout_height="wrap_content" android:layout_weight="1" android:text="Connect BT" android:id="@+controller_id/ButtonBTConnect" android:layout_width="fill_parent"></Button>
<Button android:layout_height="wrap_content" android:layout_weight="1" android:text="Disconnect BT" android:id="@+controller_id/ButtonBTDisconnect" android:layout_width="fill_parent"></Button>
</LinearLayout>
</LinearLayout>



<ScrollView android:layout_height="wrap_content" android:layout_width="fill_parent" android:layout_weight="1" android:id="@+controller_id/ScrollViewLog">
<TextView android:layout_width="fill_parent" android:text="@+id/TextViewLog" android:layout_height="wrap_content" android:layout_weight="1" android:id="@+controller_id/TextViewLog"></TextView>
</ScrollView>

<LinearLayout android:id="@+id/LinearLayout02" android:layout_height="wrap_content" android:layout_width="fill_parent" android:orientation="horizontal" android:background="#FFA0A0A0">
<Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1" android:text="Clear Log" android:id="@+controller_id/ButtonClear"></Button>
<Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1" android:id="@+controller_id/ButtonConsole" android:text="Open Console"></Button>
<Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1" android:id="@+controller_id/ButtonQuit" android:text="Close"></Button>
</LinearLayout>


</LinearLayout>

